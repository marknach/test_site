<%= form_for @post, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :for => 'post_title' %>
    <%= f.text_field :title, :class => 'form-control col-md-8' %>
  </div>
  <div class="form-group">
    <%= f.label :content, :for  => 'post_content' %>
    <%= f.text_area :content, :class => 'form-control col-md-8', rows: 10 %>
  </div>

   <button type="submit" class="btn btn-primary">Submit</button>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-danger' %>
<% end %>
