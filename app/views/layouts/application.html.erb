<!DOCTYPE html>
<html>
<head>
    <title>Blog</title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to "Blog", root_path, class: "brand" %>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li><%= link_to "Posts", posts_path %></li>
                    <li><a href="#contact">Contact</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li class="nav-header">Nav header</li>
                            <li><a href="#">Separated link</a></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                </ul>
                <% if signed_in? %>
                    <div class="navbar-div pull-right">
                      <p class="navbar-text span2"><%=  current_user.email %></p>
                      <%= link_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn" %>
                <% else %>
                  <%= form_for("user", :url => user_session_path, :html => { class: "navbar-form pull-right" }) do |f| %>
                    <%= f.text_field :email, class: "span2", placeholder: "Email" %>
                    <%= f.password_field:password, class: "span2", placeholder: "Password" %>
                    <%= f.submit 'Sign In', class: "btn"  %>
                    <%= link_to "Sign up", new_user_registration_path, class: "btn" %>
                  <% end %>
              <% end %>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>
<%= bootstrap_flash %>
<%= yield %>
</body>
</html>
