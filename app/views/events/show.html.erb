<%- model_class = Event -%>
<div class="page-header">
  <h2><%= @event.title %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @event.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @event.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><%= simple_format @event.html_content %></dd>
</dl>
<% if current_user.try(:is_admin?) %>
    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  events_path, :class => 'btn btn-default' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_event_path(@event), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  event_path(@event),
                  :method => 'delete',
                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                  :class => 'btn btn-danger' %>
<% end %>
</div>
