<div class="container">
  <hr/>
  <div class="col-md-3">
    <%= image_tag @user.gravatar_url, class: "img-responsive img-thumbnail" %>
    <h3><%= @user.name %></h3>
    <p><%= @user.email %></p>
  </div>
  <div class="col-md-9">
    <p><%= @user.bio %></p>
      <h3>Recent Posts</h3>
      <% @recent_announcements.each do |announcement| %>
          <p>
            <strong> <%= link_to announcement.title, announcement_path(announcement) %> </strong>
            by <i><%= announcement.user %> </i>
          </p>

          <p> <%= simple_format announcement.preview %> </p> <%= link_to "(read more)", announcement_path(announcement) %>
          <hr>
      <% end %>
  </div>
</div> 
